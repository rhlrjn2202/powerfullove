---
layout: layouts/base.njk
title: Home
---
{% from "_includes/components/hero.njk" import hero %}
{% from "_includes/components/event-card.njk" import eventCard %}
{% from "_includes/components/cta.njk" import cta %}

{{ hero(
    "Welcome to Our Spiritual Center",
    "A place for growth, healing, and spiritual connection"
) }}

<section class="featured-content">
    <h2>Latest Events</h2>
    <div class="events-grid">
    {%- for event in collections.events | reverse | limit(3) -%}
        {{ eventCard(event) }}
    {%- endfor -%}
    </div>
</section>

{{ cta(
    "Join Our Community",
    "Connect with like-minded individuals on your spiritual journey",
    "Get in Touch",
    "/contact/"
) }}