<div class="hero-section" style="background-image: linear-gradient(rgba(11, 60, 93, 0.7), rgba(11, 60, 93, 0.8)), url('{{ home.heroImage }}');">
    <div class="hero-content">
        <h1>{{ home.heroTitle }}</h1>
        <p>{{ home.heroDescription }}</p>
        <div class="hero-buttons">
            <a href="{{ home.primaryButtonLink }}" class="btn-primary">{{ home.primaryButtonText }}</a>
            <a href="{{ home.secondaryButtonLink }}" class="btn-secondary">{{ home.secondaryButtonText }}</a>
        </div>
    </div>
</div>

<section class="features">
    <h2>Our Mission</h2>
    <div class="features-grid">
        <div class="feature-card">
            <h3>Love</h3>
            <p>Spreading unconditional love and compassion to create positive change in the world.</p>
        </div>
        <div class="feature-card">
            <h3>Wisdom</h3>
            <p>Sharing spiritual wisdom and teachings for personal growth and enlightenment.</p>
        </div>
        <div class="feature-card">
            <h3>Community</h3>
            <p>Building a supportive community dedicated to spiritual growth and understanding.</p>
        </div>
    </div>
</section>

<section>
